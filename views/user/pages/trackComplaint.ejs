<%- include('../components/header.ejs') %>

<section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/user/dashboard">Home <i class="fa fa-chevron-right"></i></a></span> <span>Track Complaint <i class="fa fa-chevron-right"></i></span></p>
                <h1 class="mb-0 bread">Track Complaint</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row d-flex" id="dataSection">
            <%
                complaints.forEach((complaint)=>{
                    const createdAtDate = new Date(complaint.createdAt);
                    const formattedDate = createdAtDate.toDateString();
            %>
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry align-self-stretch">
                        <a href="/user/complaint-detail/<%= complaint._id %>" class="block-20 rounded" style="background-image: url('<%= complaint.problemImage.url %>');">
                        </a>
                        <div class="text p-4 text-center">
                            <h3 class="heading"><a href="/user/complaint-detail/<%= complaint._id %>"><%= complaint.title %></a></h3>
                            <div class="meta mb-2">
                                <div><a href="/user/complaint-detail/<%= complaint._id %>"><%= formattedDate  %></a></div>
                            </div>
                            <p><%= complaint.description.substring(0,80) %>...</p>
                            <button type="button" class="btn btn-primary" onclick="window.location.pathname = '/user/complaint-detail/<%= complaint._id %>'">More Info</button>
                        </div>
                    </div>
                </div>
            <%
                })
            %>
        </div>

