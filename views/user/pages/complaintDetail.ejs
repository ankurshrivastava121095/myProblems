<%- include('../components/header.ejs') %>

<section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/user/dashboard">Home <i class="fa fa-chevron-right"></i></a></span> <span>Complaint Detail <i class="fa fa-chevron-right"></i></span></p>
                <h1 class="mb-0 bread">Complaint Detail</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1><%= complaint.title %></h1>
                <h3><%= complaint.createdAt.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: '2-digit', year: 'numeric' }) %></h3>
                <div><%= complaint.description %></div>
                <div class="my-3"><span style="font-weight: bold;"><i class="fa fa-map-marker" aria-hidden="true"></i> Address:</span> <%= complaint.address %></div>
                <div><span style="font-weight: bold;"><i class="fa fa-hourglass-start" aria-hidden="true"></i> Status:</span> <%= complaint.status %></div>
                <%
                    if(complaint.resolvedDate != null){
                %>
                    <div class="mt-3"><span style="font-weight: bold;"><i class="fa fa-check-square-o" aria-hidden="true"></i> Resolved On:</span> <%= complaint.resolvedDate %></div>
                <%
                    } else {
                %>
                    <span></span>
                <%
                    }
                %>
                <%
                    if(complaint.status == 'Pending'){
                %>
                    <a href="/user/remove-complaint/<%= complaint._id %>" class="btn btn-lg btn-danger my-3" style="width: 100%;"><i class="fa fa-trash" aria-hidden="true"></i> Click to Remove this Complaint</a>
                <%
                    } else {
                %>
                    <span></span>
                <%
                    }
                %>
            </div>
            <div class="col-md-4">
                <img src="<%= complaint.problemImage.url %>" style="width: 100%;" alt="">
            </div>
        </div>
    </div>
</section>

<%- include('../components/footer.ejs') %>